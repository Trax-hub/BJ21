<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.blackjack21">

    <application
        android:allowBackup="true"
        android:label="Black Jack 21"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:icon="@mipmap/ic_launcher">
        <activity
            android:name=".MenuActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LogInActivity" android:exported="true" android:screenOrientation="fullSensor"/>
        <activity android:name=".SignUpActivity" android:exported="true" android:screenOrientation="fullSensor"/>
        <activity android:name=".PortalActivity" android:exported="true" android:screenOrientation="fullSensor"/>
        <activity android:name=".ScoreBoardActivity" android:exported="true" android:screenOrientation="fullSensor"/>
        <activity android:name=".RealGameActivity" android:exported="true" android:screenOrientation="fullSensor"/>
        <activity android:name=".TrainingModeActivity" android:exported="true" android:screenOrientation="fullSensor"/>
        <activity android:name=".RulesActivity" android:exported="true" android:screenOrientation="fullSensor"/>

    </application>


</manifest>